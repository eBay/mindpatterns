    "makeup-prevent-scroll-keys": "~0.2.1",
    "makeup-roving-tabindex": "~0.6.0",
    "makeup-snackbar-dialog": "~0.1.0",
    "makeup-switch": "~0.2.0",
    "makeup-toast-dialog": "~0.1.0",
    "mini-css-extract-plugin": "^2.7.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4",
